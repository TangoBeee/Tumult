<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".application.applicationsfragments.ProfileViewFragment"
    android:gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="50dp"
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/uploadImg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_adduser"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:textSize="30dp"
        android:layout_below="@+id/cardView"
        android:layout_margin="24dp"/>

    <EditText
        android:id="@+id/nameET"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:maxLines="1"
        android:inputType="text"
        android:hint="Enter your new name"
        android:textColor="@color/black"
        android:background="@drawable/rounder_edittext"
        android:layout_below="@id/name"/>


    <Button
        android:id="@+id/signOut"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:textColor="@color/black"
        android:elevation="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_btns"
        app:backgroundTint="@color/white"
        android:layout_below="@+id/nameET"/>

    <Button
        android:id="@+id/saveInfo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_btns"
        app:backgroundTint="@null"
        android:layout_below="@+id/signOut"/>

</RelativeLayout>